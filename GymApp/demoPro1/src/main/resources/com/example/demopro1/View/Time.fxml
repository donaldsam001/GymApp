<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demopro1.Controller.TimeController">
   <children>
      <VBox spacing="10" layoutX="20" layoutY="20">
         <HBox spacing="10">
            <TextField fx:id="searchField" promptText="Search by ID, Name, Phone" />
            <Button text="Search" onAction="#handleSearch" />
         </HBox>
         <TableView fx:id="timeTableView">
            <columns>
               <TableColumn fx:id="colCustomerID" text="Customer ID" />
               <TableColumn fx:id="colName" text="Name" />
               <TableColumn fx:id="colPhone" text="Phone" />
               <TableColumn fx:id="colStartDay" text="Start Day" />
               <TableColumn fx:id="colEndDay" text="End Day" />
               <TableColumn fx:id="colStatus" text="Status" />
            </columns>
         </TableView>
      </VBox>
   </children>
</AnchorPane>
